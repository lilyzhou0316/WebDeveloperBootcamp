<%- include ("partial/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<!-- method override: when ? followed by _method the method"POST" will be overrided by PUT, need to install method-override -->
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<!-- use blog as an object which contains title, image, content -->
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Content</label>
			<textarea name="blog[content]"> <%= blog.content %></textarea>
		</div>
		<input type="submit" class="ui blue big inverted button">		
	</form>
</div>
<%- include ("partial/footer") %>